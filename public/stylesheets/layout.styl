/* Layout Start */
html, body
  width 3360px
  height 1080px
.layout-wrap
  width 3360px
  height 1080px
  background khaki
  overflow hidden
.layout-aside
  float left
  width 960px
  height 100%
.layout-main
  float left
  width 1440px
  height 100%
.layout-header
  height 360px
  overflow hidden
.layout-content
  height 720px
  overflow hidden
.layout-panel-small
  float left
  width 480px
  height 360px
  background lightgray
.layout-panel-middle
  float left
  width 960px
  height 360px
  background lightgreen
.layout-panel-large
  float left
  width 960px
  height 720px
  background lightblue
.layout-panel-extra
  float left
  width 1440px
  height 720px
  background lightpink
.layout-title
  padding 10px 460px
  height 60px
  overflow hidden
.layout-title h1
  float left
  display block
  width 60px
  height 60px
  background lightseagreen
.layout-title h2
  float left
  display block
  font-size:24px
  margin-left 20px
  width 440px
  height 60px
  line-height 60px
.layout-nav ul
  overflow hidden
  padding 0 240px
.layout-nav ul > li
  float left
  display block
  margin 0 10px
  width 100px
  height 140px
  overflow hidden
  background lightcoral
.layout-nav ul > li > a
  width 100%
  height 100%
  overflow hidden
.layout-nav ul > li > a > i
  display block
  width 100px
  height 100px
  overflow hidden
  background lightblue
.layout-nav ul > li > a > span
  display block
  height 40px
  line-height 40px
  text-align center
  overflow hidden
.layout-status
  margin-top 10px
.layout-status ul
  overflow hidden
  margin 0 auto
  width 1380px
  height 120px
.layout-status ul > li
  float left
  width 460px
  height 40px
  line-height 40px
  overflow hidden
/* Layout End */
