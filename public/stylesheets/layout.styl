/* Layout Start */
html, body
  color #eeeeee
  width 3360px
  height 1080px
  background #222222
a
  color #eeeeee
  text-decoration none
.layout-wrap
  width 3360px
  height 1080px
  overflow hidden
.layout-aside
  float left
  width 960px
  height 100%
.layout-main
  float left
  width 1440px
  height 100%
.layout-header
  height 360px
  overflow hidden
.layout-content
  height 720px
  overflow hidden
.layout-panel-small
  float left
  width 480px
  height 360px
.layout-panel-middle
  float left
  width 960px
  height 360px
.layout-panel-large
  float left
  width 960px
  height 720px
.layout-panel-extra
  float left
  width 1440px
  height 720px
.layout-title
  padding 0 420px
  height 80px
  overflow hidden
.layout-title h1
  float left
  display block
  width 80px
  height 80px
.layout-title h1 a,
.layout-title h1 a img
  display block
  width 100%
  height 100%
.layout-title h2
  float left
  display block
  font-size:24px
  margin-left 20px
  width 460px
  height 80px
  line-height 80px
.layout-nav ul
  overflow hidden
  padding 0 240px
.layout-nav ul > li
  float left
  display block
  margin 0 10px
  width 100px
  height 120px
  overflow hidden
.layout-nav ul > li > a
  display block
  width 100%
  height 100%
  overflow hidden
.layout-nav ul > li > a > img
  margin 0 10px
  display block
  width 80px
  height 80px
  overflow hidden
.layout-nav ul > li > a > span
  display block
  height 40px
  line-height 40px
  text-align center
  overflow hidden
.layout-status
  margin-top 10px
.layout-status ul
  overflow hidden
  margin 0 auto
  width 1380px
  height 120px
.layout-status ul > li
  float left
  width 460px
  height 40px
  line-height 40px
  overflow hidden
/* Layout End */

